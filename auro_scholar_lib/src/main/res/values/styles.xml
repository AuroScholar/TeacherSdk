<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>


    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
<!--
        <item name="fontFamily">@font/opensans_regular</item>
-->
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <declare-styleable name="RPView">
        <attr name="Font" format="string" />
        <attr name="starPin" format="boolean" />
    </declare-styleable>

    <style name="Widget.BottomNavigationViewSelect" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">@dimen/_10sdp</item>
       <!-- <item name="fontFamily">@font/opensans_regular</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/toolbar_pink</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="android:background">@color/white</item>

        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/black</item>

        <item name="colorAccent">#ffeb3b</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">#ffeb3b</item>

    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_red</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/taupe</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MatchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLength">30</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="InputLayout_Theme">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColorHint">@color/taupe</item>
        <item name="colorControlNormal">@color/taupe</item>
        <item name="colorControlActivated">@color/taupe</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="colorControlHighlight">@color/taupe</item>

    </style>

    <style name="EditText_Theme">
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/taupe</item>
        <item name="colorControlNormal">@color/taupe</item>
        <item name="colorControlActivated">@color/taupe</item>
        <item name="colorControlHighlight">@color/taupe</item>

    </style>

    <style name="Dropdown_InputLayout_Theme">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColorHint">@color/taupe</item>
        <item name="colorControlNormal">@color/taupe</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="colorControlActivated">@color/taupe</item>
        <item name="colorControlHighlight">@color/taupe</item>

    </style>

    <style name="BottomSheetDialogThemeNoFloating" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--   <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>-->
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="Switch_Theme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/ufo_green</item>
    </style>

    <declare-styleable name="ExpandableTextView">
        <attr name="animation_duration" format="integer" />
    </declare-styleable>


</resources>
